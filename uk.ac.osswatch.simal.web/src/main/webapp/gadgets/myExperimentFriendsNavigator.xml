<Module>
  <ModulePrefs title="MyExperiment Friends Navigator">
    <Require feature="opensocial-0.7" />
  </ModulePrefs>
  <Content type="html">
    <![CDATA[      
<script>
gadgets.util.registerOnLoadHandler(init);

function init() {
 loadFriends();
}

function loadFriends() {
  var req = opensocial.newDataRequest();
  req.add(req.newFetchPersonRequest('VIEWER'), 'viewer');
  req.add(req.newFetchPeopleRequest('VIEWER_FRIENDS'), 'viewerFriends');
  req.send(onLoadFriends);
}

var allPeople, viewerFriendData;
function onLoadFriends(data) {
  var viewer = data.get('viewer').getData();
  document.getElementById('viewerName').innerHTML = viewer.getDisplayName();
  
  allPeople = data.get('viewerFriends').getData().asArray() || new Array();

  var html = '<ul>';
  for (var i = 0; i < allPeople.length; i++) {
   // FIXME: should really get the full details from myExperiment and render them here
   profileURL = allPeople[i].getId().replace("\.xml\?id=", "s/");
   html += '<li class="name"><a href="' + profileURL + '" target="_new">' + allPeople[i].getDisplayName() + '</a></li>';
  }
  html += '</ul>';
  document.getElementById('myExperimentFriends').innerHTML = html;
}
</script>

      <div id='main'>
        <p>MyExperiment friends for <span id="viewerName">Viewer</span>:</p>
        <div id='myExperimentFriends'>Loading....<br/>Note this will only work if you have patched Shindig locally - ask on our dev lists if you need help.</div>
      </div>
    ]]>
  </Content>
</Module>