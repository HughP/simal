<project default="build" basedir="." name="simal-installer">

    <taskdef name="izpack" classpath="${izpack.dir}/lib/compiler.jar" classname="com.izforge.izpack.ant.IzPackTask" />

    <target name="build" description="Build the Simal installer">
        <izpack input="MyApp-install.xml" 
                output="${dist.dir}/MyApp-install-${ver}.${rel}.jar" 
                installerType="standard" 
                basedir="${dist.dir}" 
                izPackDir="${izpack.dir}/" />
    </target>
</project>