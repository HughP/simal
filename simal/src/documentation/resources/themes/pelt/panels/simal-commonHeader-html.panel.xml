<forrest:template
    xmlns:forrest="http://apache.org/forrest/templates/1.0"
    xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">

    <forrest:hook name="header">
        <forrest:contract name="branding-tagline">
            <forrest:property name="branding-tagline-name">
                Simal
            </forrest:property>
            <forrest:property name="branding-tagline-tagline">
                Connecting Communities Through Project Knowledge
            </forrest:property>
        </forrest:contract>
        
        <forrest:hook class="logo">
            <forrest:contract name="branding-logo">
                <forrest:property name="branding-logo-name">
                    OSS Watch
                </forrest:property>
                <forrest:property name="branding-logo-description">
                    Open Source Advisory Service
                </forrest:property>
                <forrest:property name="branding-logo-url">
                    http://www.oss-watch.ac.uk/
                </forrest:property>
                <forrest:property name="branding-logo-logo">
                    images/group.png
                </forrest:property>
            </forrest:contract>
        </forrest:hook>
        
        <forrest:hook class="logo">
            <forrest:contract name="branding-logo">
                <forrest:property name="branding-logo-name">
                    Simal
                </forrest:property>
                <forrest:property name="branding-logo-description">
                    Project Catalogue
                </forrest:property>
                <forrest:property name="branding-logo-url">
                    http://simal.oss-watch.ac.uk/
                </forrest:property>
                <forrest:property name="branding-logo-logo">
                    images/project.png
                </forrest:property>
            </forrest:contract>
        </forrest:hook>

        <forrest:contract name="helper-form-blank" />
        <forrest:contract name="search-input">
            <forrest:property name="input-size">25</forrest:property>
            <forrest:property name="search-input">
                <search name="Simal" domain="http://simal.oss-watch.ac.uk"
                    provider="google" />
            </forrest:property>
        </forrest:contract>

        <forrest:hook name="nav-main-hook">
            <forrest:contract name="nav-main"
                dataURI="cocoon://#{$getRequest}.navigation.xml" />
            <forrest:hook name="publishedStrip" nbsp="true">
                <forrest:contract name="nav-main-sub"
                    dataURI="cocoon://#{$getRequest}.navigation.xml" />
                <forrest:contract name="siteinfo-last-published" />
            </forrest:hook>
        </forrest:hook>
    </forrest:hook>

</forrest:template>
