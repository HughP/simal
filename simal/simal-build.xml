<project default="run" basedir="." name="simal">

    <property environment="env" />

    <property name="simal.home"   location="${env.SIMAL_HOME}"/>
    <property name="simal.seeds"  location="${simal.home}/src/seeds"/>
    <property name="simal.tools.dir" location="${simal.home}/tools"/>
    <property name="simal.build.dir" location="${simal.home}/build"/>
    <property name="simal.forrest.build.dir" location="${simal.build.dir}/forrest"/>

    <property name="forrest.home"   location="${simal.forrest.build.dir}"/>
    
    <import file="${simal.forrest.build.dir}/main/forrest.build.xml" />

    <target name="seed-catalogue" depends="ensure-nocontent" 
      description="* Seeds a basic Simal catalogue">
        <copy todir="${project.home}" overwrite="false">
            <fileset dir="${simal.seeds}/basic" />
        </copy>
        <loadfile property="template-project-created-message" srcFile="${simal.forrest.build.dir}/main/var/template-project-created-message-basic.txt">
            <filterchain>
                <expandproperties />
            </filterchain>
        </loadfile>
        <echo>${template-project-created-message}</echo>
    </target>

    <target name="seed-event" depends="seed-basic" 
      description="* Seeds an example intended to capture details of an event with  multiple projects">
        <copy todir="${project.home}" overwrite="true">
            <fileset dir="${simal.seeds}/event" />
        </copy>
        <loadfile property="template-project-created-message" srcFile="${simal.forrest.build.dir}/main/var/template-project-created-message-basic.txt">
            <filterchain>
                <expandproperties />
            </filterchain>
        </loadfile>
        <echo>${template-project-created-message}</echo>
    </target>

    <target name="ensure-nocontent" depends="check-contentdir" if="project.content.present" unless="skip.contentcheck">
        <fail>
  ------------------------------------------------
  This project already has content in ${content-dir}.

  Run with '-Dskip.contentcheck=yes' to ignore existing content.
  ------------------------------------------------
      </fail>
    </target>

</project>