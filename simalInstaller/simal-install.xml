<installation version="1.0">
    <info>
        <appname>Simal</appname>
        <appversion>0.1-dev</appversion>
        <authors>
            <author name="OSS Watch" email="info@oss-watch.ac.uk" />
        </authors>
        <url>http://simal.oss-watch.ac.uk</url>
        <javaversion>1.5</javaversion>
    </info>
    <guiprefs height="600" resizable="yes" width="800">
        <laf name="metouia">
            <os family="unix" />
        </laf>
    </guiprefs>
    <locale>
        <langpack iso3="eng" />
    </locale>
    <resources>
        <res src="install-readme.html" id="HTMLInfoPanel.info" />
        <res src="Licence.txt" id="LicencePanel.licence" />
        <res src="langsel.jpg" id="installer.langsel.img" />
    </resources>
    <panels>
        <panel classname="HelloPanel" />
        <panel classname="HTMLInfoPanel" />
        <panel classname="LicencePanel" />
        <panel classname="PacksPanel" />
        <panel classname="TargetPanel" />
        <panel classname="InstallPanel" />
        <panel classname="SimpleFinishPanel" />
    </panels>
    <packs>
        <pack name="Catalogue" required="yes">
            <description>Catalogue generation system.</description>
            <fileset dir="../simal" targetdir="$INSTALL_PATH">
                <include name="*.txt" />
                <include name="bin/**/*" />
                <include name="lib/**/*" />
            </fileset>
        </pack>
        (...)
    </packs>
</installation>